<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>5th page</title>
  <link rel="stylesheet" href="/css/4style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Lato:wght@700&display=swap" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>

   <div class="main-container">
    <img src="assets/bg-bus.png" alt="Road Background" />

    <div class="gradient-box ">
      <div class="middle-container">
        <!-- Left Side -->
        <div class="left-side ">
          <img src="assets/image 1.png" alt="Coach Hire Company" />
          <div class="left-text-container">
            <h1 class="left-title">Coach Hire Company<br />West Cork</h1>
            <p class="left-description ">
              Based in Skibbereen, Dave Long Coach Travel is West <br> Corkâ€™s leading Coach & Mini Bus hire company. We pride  <br>ourselves on offering a wide range of coach and mini  <br> bus sizes to suit any group size or budget.
            </p>
          </div>
        </div>

        <!-- Right Side -->
        <div class="right-side ">
          <h2 class="right-header">Need A Quick Price Quote for Bus Hire in West Cork?</h2>

          <!-- Step Indicator -->
          <div class="d-flex align-items-center justify-content-center flex-wrap ">
            <div class="step-circle active-step"><i class="fa-solid fa-check"></i></div>
            <div class="step-line-container"><div class="step-line"></div></div>
            <div class="step-circle active-step"><i class="fa-solid fa-check"></i></div>
            <div class="step-line-container"><div class="step-line"></div></div>
            <div class="step-circle active-step"><i class="fa-solid fa-check"></i></div>
            <div class="step-line-container"><div class="step-line"></div></div>
            <div class="step-circle active-step">4</div>
          </div>

          <!-- Form -->
          <form class="form-wrapper"onsubmit="return showSuccess(event)"  action="/submit-user-details" method="POST">
            <input type="hidden" name="tripId" value="<%= tripId %>">
            <h5>Now, tell us about yourself</h5>
            
            

             <div class="col-md-12">
             <label for="username">Your full name</label>
            <input class="inputs"type="text" id="username" name="fullName" placeholder="Seamus O'Connell MacCarthy" />
            
           </div>

           <div class="col-md-8">
              <label for="phoneNumber">Phone number</label>
            <input class="inputs" name="phoneNumber" type="text" id="phoneNumber" placeholder="+353 87 123 4597" />
           </div>

           <div class="col-md-12">
             <label for="username">Email</label>
            <input class="inputs" type="text"name="email" id="username" placeholder="Seamus O'Connell MacCarthy" />
           </div>

           <div class="col-md-12">
             <label for="info">Additional information or requests? <span class="optional">OPTIONAL</span></label>
            <textarea class="inputs" name="additionalInfo" id="info" cols="10" rows="3"></textarea>
           </div>

             <div class="form-check">
              <input class="form-check-input" name="confirmedDetails" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" name="agreedToPrivacyPolicy" for="flexCheckDefault">
             i confirm that the above information is correct. i'm aware that any changes to the trip will affect its price. 
            </label>
            </div>
            
           <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              i agree to the processing of my personal data in accordance with the <a href="#">Privacy policy</a> 
            </label>
            </div>
            

            <hr />

            <!-- Center the Continue button here -->
           
              <button type="submit" class="btn-continue">Submit Quote Request <i class="fa-regular fa-paper-plane"></i></button>
              
          </form>
        </div>
      </div>
    </div>

    <h1 class="section-title">What We Do</h1>
  </div>
  <script>
  function showSuccess(event) {
    event.preventDefault(); // Stop form from submitting immediately

    Swal.fire({
      title: "Good job!",
      text: "Your information has been successfully submitted!",
      icon: "success",
      confirmButtonText: "OK"
    }).then(() => {
      event.target.submit(); // Submit the form after popup closes
    });

    return false;
  }
</script>

</body>
</html>
